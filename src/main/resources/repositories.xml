<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean
            id="message1"
            class="com.blazej.messagesender.domain.Message">
        <constructor-arg name="subject" value="some subject"/>
        <constructor-arg name="body" value="some body"/>
    </bean>
    <bean
            id="message2"
            class="com.blazej.messagesender.domain.Message">
        <constructor-arg name="subject" value="hot topic"/>
        <constructor-arg name="body" value="nice body"/>
        <property name="id" value="123"/>
    </bean>
    <bean
            id="message3"
            class="com.blazej.messagesender.domain.Message">
        <constructor-arg name="subject" value="some subject"/>
        <constructor-arg name="body" value="some body"/>
        <property name="id" value="890"/>
        <property name="sender" value="one who sends"/>
        <property name="recipient" value="one who receives"/>
    </bean>
    <bean id="messageRepository"
          class="com.blazej.messagesender.repository.inmemory.InMemoryMessageRepository">
        <constructor-arg>
            <list>
                <ref bean="message1"/>
                <ref bean="message2"/>
                <ref bean="message3"/>
            </list>
        </constructor-arg>
    </bean>
</beans>
