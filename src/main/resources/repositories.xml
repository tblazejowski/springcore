<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="messageFactory" class="com.blazej.messagesender.domain.MessageFactory"/>
    <bean id="messageRepository"
          class="com.blazej.messagesender.repository.inmemory.InMemoryMessageRepository">
        <constructor-arg>
            <list>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.blazej.messagesender.service.MessageDto">
                            <property name="subject" value="some subject"/>
                            <property name="body" value="some body"/>
                        </bean>
                    </constructor-arg>
                </bean>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.blazej.messagesender.service.MessageDto">
                            <property name="subject" value="hot topic"/>
                            <property name="body" value="nice body"/>
                        </bean>
                    </constructor-arg>
                    <constructor-arg name="id" value="123"/>
                </bean>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.blazej.messagesender.service.MessageDto">
                            <property name="subject" value="some subject"/>
                            <property name="body" value="some body"/>
                            <property name="sender" value="one who sends"/>
                            <property name="recipient" value="one who receives"/>
                        </bean>
                    </constructor-arg>
                    <constructor-arg name="id" value="890"/>
                </bean>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.blazej.messagesender.service.MessageDto">
                            <property name="subject" value="long subject"/>
                            <property name="body" value="short body"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>
</beans>
